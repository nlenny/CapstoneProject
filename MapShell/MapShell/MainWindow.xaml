        xmlns:UserControls="clr-namespace:MapShell.UserControls"
        x:Name="MapView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
